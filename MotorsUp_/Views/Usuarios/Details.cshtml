@model MotorsUp_.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<a asp-action="Index" style="text-decoration: none;"><i class="bi bi-arrow-left-square-fill"></i></a>

<h1 class="row justify-content-center">Detalles de Usuarios</h1>


<div class="row justify-content-center" style="padding:10px">
    <table>
        <thead>
            <tr>
                <th scope="col">Id Usuario</th>
                <th scope="col">Correo Usuario</th>
                <th scope="col">Contraseña Usuario </th>
                <th scope="col">Id Rol</th>
                <th scope="col">Id IdRolNavigation</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.IdUsuario)</td>
                <td>@Html.DisplayFor(model => model.CorreoUsuario)</td>
                <td>@Html.DisplayFor(model => model.ContrasenaUsuario)</td>
                <td>@Html.DisplayFor(model => model.IdRol)</td>
                <td>@Html.DisplayFor(model => model.IdRolNavigation)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.IdUsuario"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

