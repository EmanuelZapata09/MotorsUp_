@model IEnumerable<MotorsUp_.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}


<h1 class="row justify-content-center">Usuarios</h1>

    <p class="btn btn-primary">
        <a asp-action="Create" style="color:white; text-decoration: none;"><i class="bi bi-plus"></i> Añadir</a>
    </p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Correo
            </th>
            <th>
                Contraseña
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContrasenaUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRolNavigation.IdRol)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuario"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdUsuario"><i class="bi bi-sliders"></i></a> 
            </td>
        </tr>
}
    </tbody>
</table>
