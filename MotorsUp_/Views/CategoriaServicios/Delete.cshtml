@model MotorsUp_.Models.CategoriaServicio

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Categoria Servicio</h1>

<h3>¿Estas seguro que quieres eliminar la categoria @Html.DisplayFor(model => model.NombreCategoria)?</h3>
<div>
    <h4>CategoriaServicio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoCategoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCategoria" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Atras</a>
    </form>
</div>
