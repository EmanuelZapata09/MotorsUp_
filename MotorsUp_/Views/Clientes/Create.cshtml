@model MotorsUp_.Models.Cliente

@{
    ViewData["Title"] = "Create";
}


<h4 class="row justify-content-center"> Añadir Clientes</h4>
<a asp-action="Index" style="text-decoration: none;"><i class="bi bi-arrow-left-square-fill"></i></a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="form-cliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" id="cliente"/>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label"></label>
                <input asp-for="NombreCliente" class="form-control" id="nombre"/>
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoCliente" class="control-label"></label>
                <input asp-for="TelefonoCliente" class="form-control" id="telefono"/>
                <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoCliente" class="control-label"></label>
                <input asp-for="CorreoCliente" class="form-control" id="correo"/>
                <span asp-validation-for="CorreoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionCliente" class="control-label"></label>
                <input asp-for="DireccionCliente" class="form-control" id="direccion"/>
                <span asp-validation-for="DireccionCliente" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoCliente" /> @Html.DisplayNameFor(model => model.EstadoCliente)
                </label>
            </div>
            <div class="content-button">
                <div class="form-group text-center" style="padding: 7px">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById('form-cliente').addEventListener('submit', function (e) {
            e.preventDefault();
            // Obtener los valores directamente y validar
            if (
                document.getElementById('cliente').value.trim() !== '' &&
                document.getElementById('nombre').value.trim() !== '' &&
                document.getElementById('telefono').value.trim() !== '' &&
                document.getElementById('correo').value.trim() !== '' &&
                document.getElementById('direccion').value.trim() !== ''
            ) {
                swal.fire({
                    title: 'Cliente registrado con éxito',
                    icon: 'success',
                    showConfirmButton: false,
                    showCancelButton: false,
                    timer: 1800
                }).then(() => {
                    document.getElementById('form-cliente').submit();
                });
            } else {
                swal.fire({
                    title: 'Complete todos los campos',
                    icon: 'warning',
                    showConfirmButton: false,
                    showCancelButton: false,
                    timer: 1800
                });
            }
        });

    </script>
}
