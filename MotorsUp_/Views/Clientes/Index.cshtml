@model IEnumerable<MotorsUp_.Models.Cliente>

@{
    ViewData["Title"] = "Index";
  
}

<h1 class="row justify-content-center">Clientes</h1>

<p class="btn btn-primary">
        <a asp-action ="Create" style="color:white; text-decoration: none;"><i class="bi bi-plus"></i> Añadir</a>
    </p>
<table class="table table-striped" >
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Telefono
            </th>
            <th>
                Correo
            </th>
            <th>
                Direccion
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoCliente)
            </td>
            
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdCliente"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdCliente"><i class="bi bi-sliders"></i></a>
                    
                </td>
        </tr>
}
    </tbody>
</table>
