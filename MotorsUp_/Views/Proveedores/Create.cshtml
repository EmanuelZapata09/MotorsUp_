@model MotorsUp_.Models.Proveedore

@{
    ViewData["Title"] = "Create";
}


<h1 class="row justify-content-center">Crear proveedor</h1>

<a asp-action="Index" style="text-decoration: none;"><i class="bi bi-arrow-left-square-fill"></i></a>
<hr />
<div class="col-md-4">
    <form asp-action="Create" id="form-proveedor">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdProveedor" class="control-label"></label>
            <input asp-for="IdProveedor" class="form-control" id="id" />
            <span asp-validation-for="IdProveedor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NombreProveedor" class="control-label"></label>
            <input asp-for="NombreProveedor" class="form-control" id="nombre" />
            <span asp-validation-for="NombreProveedor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CorreoProveedor" class="control-label"></label>
            <input asp-for="CorreoProveedor" class="form-control" id="correo" />
            <span asp-validation-for="CorreoProveedor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DireccionProveedor" class="control-label"></label>
            <input asp-for="DireccionProveedor" class="form-control" id="direccion" />
            <span asp-validation-for="DireccionProveedor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TelefonoProveedor" class="control-label"></label>
            <input asp-for="TelefonoProveedor" class="form-control" id="telefono" />
            <span asp-validation-for="TelefonoProveedor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-check-label">
                @Html.DisplayNameFor(model => model.Estado)
            </label>
            <input class="form-check-input" asp-for="Estado" id="createChekProveedores" />
            <label for="createChekProveedores" class="lbl"></label>
        </div>
        <div class="content-button">
            <div class="form-group text-center" style="padding: 7px">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('form-proveedor').addEventListener('submit', function (e) {
            e.preventDefault();
            // Obtener los valores directamente y validar
            if (
                document.getElementById('id').value.trim() !== '' &&
                document.getElementById('nombre').value.trim() !== '' &&
                document.getElementById('correo').value.trim() !== '' &&
                document.getElementById('direccion').value.trim() !== '' &&
                document.getElementById('telefono').value.trim() !== '' 
            ) {
                swal.fire({
                    title: 'Proveedor registrado con éxito',
                    icon: 'success',
                    showConfirmButton: false,
                    showCancelButton: false,
                    timer: 1800
                }).then(() => {
                    document.getElementById('form-proveedor').submit();

                });
            } else {
                swal.fire({
                    title: 'Complete todos los campos',
                    icon: 'warning',
                    showConfirmButton: false,
                    showCancelButton: false,
                    timer: 1800
                });
            }
        });

    </script>
}
