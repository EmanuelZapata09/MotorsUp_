<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotorsUp_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MotorsUp_.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    @if (@ViewData["login"] as bool? != true)
    {
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <button class="btn_menu">
                <div></div>
                <div></div>
                <div></div>
            </button>
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MotorsUp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="menu_lateral_comprimido" id="sideMenu">

        <ul class="navbar-nav flex-grow-1">
            <li><a id="titulo" href="#">Motors Up</a></li>

            <li class="menuViewNo nav-item">
                <a href="#" class="aControll"><i class="bi bi-gear"></i> Configuracion <span class="fa fa-chevron-down"></span></a>
                <ul class="submenu">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Permisoes" asp-action="Index">Permisos</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="RolXpermisoes" asp-action="Index">Roles por Permiso</a></li>
                </ul>
            </li>

            <li class="menuViewNo nav-item">
                <a href="#" class="aControll"><i class="bi bi-person-fill"></i> Usuarios <span class="fa fa-chevron-down"></span></a>
                <ul class="submenu">
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Gestion de Usuarios</a>
                    </li>
                </ul>
            </li>

            <li class="menuViewNo nav-item">
                <a href="#" class="aControll"><i class="bi bi-cart"></i> Compras <span class="fa fa-chevron-down"></span></a>
                <ul class="submenu">
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Productoes" asp-action="Index">Productos</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Compras" asp-action="Index">Compras</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="DetalleCompras" asp-action="Index">Detalle de compras</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Proveedores" asp-action="Index">Proveedores</a>
                    </li>
                 
                </ul>
            </li>

            <li class="menuViewNo nav-item">
                <a href="#" class="aControll"><i class="bi bi-wrench"></i> Servicios <span class="fa fa-chevron-down"></span></a>
                <ul class="submenu">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Servicios" asp-action="Index">Servicios</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="CategoriaServicios" asp-action="Index">Categorias Servicio</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Personas" asp-action="Index">Empleados</a></li>
                    <li><a href="#">Vehiculo</a></li>
                    <li><a href="#">Cotizacion</a></li>
                    <li><a href="#">Agendamiento</a></li>
                </ul>
            </li>

            <li class="menuViewNo nav-item">
                <a href="#" class="aControll"><i class="bi bi-bag-dash"></i> Ventas <span class="fa fa-chevron-down"></span></a>
                <ul class="submenu">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="DetalleXventas" asp-action="Index">Detalles de ventas</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="VentaServicios" asp-action="Index">Ventas por servicios</a></li>
                </ul>
            </li>


            <li class="menuViewNo nav-item">
                <a lass="nav-link text-dark" asp-area="" asp-controller="login" asp-action="Index"><i class="bi bi-box-arrow-left"></i> Cerrar Sesion <span class="fa fa-chevron-down"></span></a>

            </li>

        </ul>

    </div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('table.table').DataTable({
                lengthMenu: [5],
                pageLength: 5,
                paging: true,
                searching: true,
                ordering: true,
                info: false,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json",
                },
                //"scrollY": "292px",
            });

            $('.dataTables_length').hide();
            $('.dataTables_info').hide();
            $('.dataTables_filter').addClass('pull-left');

        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
