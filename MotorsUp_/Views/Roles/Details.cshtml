@model MotorsUp_.Models.Role

@{
    ViewData["Title"] = "Details";
}

<a asp-action="Index" style="text-decoration: none;"><i class="bi bi-arrow-left-square-fill"></i></a>

<h1 class="row justify-content-center">Detalles de Roles</h1>

<div class="row justify-content-center" style="padding:10px">
    <table>
        <thead>
            <tr>
                <th scope="col">Id Rol</th>
                <th scope="col">Nombre Rol</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.IdRol)</td>
                <td>@Html.DisplayFor(model => model.Nombre)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.IdRol"><i class="bi bi-pencil-square"></i></a>
                    
                </td>
            </tr>
        </tbody>
    </table>
</div>
